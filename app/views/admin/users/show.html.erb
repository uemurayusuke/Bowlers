










<div class="container mt-5">

<div class="row">
  <div class="col-3">
<%= image_tag @user.get_profile_image(200,200) %>
</div>

  <div class="col-9">
<table class="table mt-3">
<tr>
<td><%= @user.user_name %></td>
<td>
    <%= link_to "プロフィール編集", edit_admin_user_path(@user), class: "btn btn-success" %>
</td>
</tr>



<tr>
<td><%= @user.last_name %> <%= @user.first_name %></td>
</tr>

<tr>
<td><%= @user.last_name_kana %> <%= @user.first_name %></td>
</tr>

<tr>
<td><%= @user.email %></td>
</tr>


<tr>
  <td>投稿<%= @user.posts.count %>件</td>
  <td>フォロー中<%= link_to @user.followings.count, user_followings_path(@user) %>
  フォロワー<%= link_to @user.followers.count , user_followers_path(@user) %></td>
</tr>

<tr>
<td><%= @user.introduction %></td>
</tr>
</table>
</div>
</div>
</div>


<div class="container mt-5 ">
<div class="row">
  <div class="col-2">
  </div>
  <div class="col-3">
<%= link_to "投稿を全削除", destroy_all_posts_path, method: :delete, class: "btn btn-danger", data: { confirm: "本当に投稿を全て削除しますか？" } %>
</div>
</div>
<% @posts.each do |post| %>

<div class="row mt-5">
  <div class="col-2">
  </div>
  <div class="col-1">
  <%= link_to(post.user) do %>
    <%= image_tag post.user.get_profile_image(50,50)%>
    <% end %>
  </div>
  <div class='col-1'>
  <%= post.user.user_name %>
  </div>
  <div class='col-1'>
  <% post.tags.each do |tag| %>
    <%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %>
  <% end %>
  </div>
  <div class='col-2'>
  <%= link_to "投稿詳細", admin_post_path(post), class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-3">
  </div>
  <div class='col-2'>
  <%= post.created_at.strftime('%Y/%m/%d') %>
  </div>
</div>


<div class="row">
  <div class="col-3">
  </div>
  <div class='col-7'>
   <%= post.caption %>
  </div>
</div>

<div class="row">
  <div class="col-3">
  </div>
  <div class='col-7'>
  <% if post.post_image.attached? %>
  <%= image_tag post.get_post_image(400,400) %>
  <% else %>
  <% end %>
  </div>
  <% end %>
</div>
