<div class="container mt-5">
  <div class="row">

<h3>
  <%= @user.last_name+@user.first_name %>さんの会員情報編集
</h3>

<div><%= render "public/shared/error_messages", resource: @user %></div>

<table class="table mt-3">
<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
<tr>
<td><%= f.label :会員id %></td>
<td></td>
<td><%= @user.id %></td>
</tr>

<tr>
  <td>名前</td>
  <td><%= f.label :last_name, "(姓)" %></td>
  <td>
  <%= f.text_field :last_name, autofocus: true%>
  <%= f.label :first_name, "(名)" %>
  <%= f.text_field :first_name %>
  </td>
</tr>

<tr>
  <td>フリガナ</td>
  <td><%= f.label :last_name_kana, "(セイ)" %></td>
  <td>
  <%= f.text_field :last_name_kana %>
  <%= f.label :first_name_kana, "(メイ)" %>
  <%= f.text_field :first_name_kana %>
  </td>
</tr>

<tr>
  <td><%= f.label :email, "メールアドレス" %></td>
  <td></td>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
</tr>

<tr>
  <td><%= f.label :プロフィール画像 %></td>
  <td></td>
  <td><%= f.file_field :profile_image, accept: "image/*" %></td>
</tr>

<tr>
  <td><%= f.label :ユーザー名 %></td>
  <td></td>
  <td><%= f.text_field :user_name %></td>
</tr>

<tr>
  <td><%= f.label :自己紹介文 %></td>
  <td></td>
  <td><%= f.text_area :introduction %></td>
</tr>

<tr>
<td><%= f.label :会員ステータス %></td>
<td></td>
<td>
<%=f.radio_button :is_active, true %>
<%=f.label :is_active_true,"有効" %>
<%=f.radio_button :is_active, false %>
<%=f.label :is_active_false,"退会" %>
</td>
</tr>

<tr>
  <td></td>
  <td></td>
  <td><%=f.submit "変更内容を保存", class: "btn btn-success" %></td>
</tr>
<% end %>
</table>
</div>
</div>










<div class="container mt-5">
  <div class="row main-row">
    <div class="col-12">
     <h4 class="col-4"><strong>新規会員登録</strong></h4>
     <%= form_with model: @user, url: user_registration_path do |f| %>

     <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-row">
       <span class="form-group col-3 pt-4">名前</span>
        <div class="form-group col-3">
         <label for="last_name">(姓)</label>
         <%= f.text_field :last_name, class: "form-control"%>
        </div>
        <div class="form-group col-3">
         <label for="first_name">(名)</label>
         <%= f.text_field :first_name, class: "form-control"%>
        </div>
      </div>

      <div class="form-row">
        <span class="form-group col-3 pt-4">フリガナ</span>
        <div class="form-group col-3">
          <label for="last_name_kana">(セイ)</label>
          <%= f.text_field :last_name_kana, class: "form-control"%>
        </div>
        <div class="form-group col-md-3">
          <label for="first_name_kana">(メイ)</label>
          <%= f.text_field :first_name_kana, class: "form-control"%>
        </div>
      </div>


      <div class="form-row">
        <span class="form-group col-3">ユーザー名</span>
        <div class="form-group col-3">
         <%= f.text_field :user_name, class: "form-control" %>
        </div>
      </div>



      <div class="form-row">
        <span class="form-group col-3">メールアドレス</span>
        <div class="form-group col-6">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <span class="form-group col-3">パスワード(6文字以上)</span>
        <div class="form-group col-3">
         <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <span class="form-group col-3">パスワード(確認用)</span>
        <div class="form-group col-3">
         <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>

      <div class="actions form-group justify-content:center; d-flex">
        <span class="form-group col-3"></span>
        <%= f.submit "新規登録",class: "btn btn-success col-4 " %>
      </div>
      <% end %>



      <div class="actions form-group justify-content:center; d-flex">
         <span class="form-group col-3"></span>
      <%= link_to "ログインはこちら", new_session_path(resource_name),class: "btn btn-primary  col-4" %>
      </div>

      <div class="actions form-group justify-content:center; d-flex">
         <span class="form-group col-3"></span>
      <%= link_to "トップに戻る", root_path,class: "btn btn-secondary col-4" %>
      </div>



    </div>
  </div>
</div>