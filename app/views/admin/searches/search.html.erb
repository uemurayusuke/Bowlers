<% if @model == 'user' %>
  <div class="container mt-5">
	<h3 class="text-under-line">ユーザー検索結果 "<%= @content %>"</h3>
  <table class="table mt-3">
  <tr>
    <th class="col-1"></th>
    <th class="col-2">ユーザー名</th>
    <th class="col-1">投稿数</th>
    <th class="col-2">フォロー数</th>
    <th class="col-2">フォロワー数</th>
    <th class="col-2"></th>
    <th class="col-2"></th>
  </tr>

    <% @records.each do |user| %>
        <tr>
   <td class="col-1"><%= image_tag user.get_profile_image(50,50) %></td>
    <td class="col-2"><%= user.user_name %></td>
    <td class="col-1">投稿数:<%= user.posts.count %></td>
    <td class="col-2">フォロー数: <%= user.followings.count %></td>
    <td class="col-2">フォロワー数: <%= user.followers.count %></td>

    <td class="col-2">
       <%= link_to "ユーザー詳細", user_path(user), class: "btn btn-secondary" %>
    </td>
</tr>
<% end %>
</table>
</div>


<% elsif @model == 'post' %>
<div class="container mt-5">

  <div class="row">
   <div class="col-2">
  </div>
	<h3 class="text-under-line">投稿検索結果 "<%= @content %>"</h3>
	</div>


	<% if @records.present? %>

  <div>
<%= render "admin/posts/index", posts: @records %>
</div>
<% else %>
<div class="row mt-4">

  <div class="col-3">
  </div>

  <div class="col-6 text-center">
<h5>"<%= @content %>"の投稿はありません</h5>
</div>

</div>
</div>

<% end %>



<% elsif @model == 'tag' %>
<div class="container mt-5">



<div class="row">
   <div class="col-2">
  </div>
	<h3 class="text-under-line">タグ検索結果 "<%= @content %>"</h3>
</div>
	<% if @records.present? %>

	<div><%= render "admin/posts/index", posts: @records %></div>


	<% else %>
<div class="row mt-4">

  <div class="col-3">
  </div>

  <div class="col-6 text-center">
<h5>"<%= @content %>"のタグはありません</h5>
</div>

</div>

<% end %>
</div>








<% elsif @model == 'comment' %>
<div class="container mt-5">



<div class="row">
	<h3 class="text-under-line">コメント検索結果 "<%= @content %>"</h3>
</div>
	<% if @records.present? %>








	<table class="table mt-3">
  <tr>
    <th class="col-1"></th>
    <th class="col-2">ユーザー名</th>
    <th class="col-2">コメントした投稿</th>
    <th class="col-2">コメント</th>
    <th class="col-1">日時</th>
    <th class="col-2"></th>
  </tr>
<% @records.each do |post_comment| %>
  <tr>
    <td class="col-1">
    <%= link_to admin_user_path(post_comment.user_id) do %>
     <%= image_tag @users.find(post_comment.user_id).get_profile_image(50,50) %>
    <% end %>
    </td>
    <td class="col-2"><%= @users.find(post_comment.user_id).user_name %></td>
    <td class="col-2"><%= post_comment.post.caption %></td>
    <td class="col-2"><%= post_comment.comment %></td>
    <td class="col-1"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td class="col-2">
    <%= link_to "投稿詳細", admin_post_path(post_comment.post), class: "btn btn-secondary",'data-turbolinks': false %>
    <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete,class: "btn btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

















	<% else %>
<div class="row mt-4">

  <div class="col-3">
  </div>

  <div class="col-6 text-center">
<h5>"<%= @content %>"のコメントはありません</h5>
</div>

</div>

<% end %>
</div>







<% end %>