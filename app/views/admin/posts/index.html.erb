<div class="container mt-5 ">
 <div class="row">
 <div class="col-2">
 </div>
<h3>投稿リスト</h3>
</div>

<div class="row mt-3">
 <div class="col-2">
 </div>
 <div class="col-3">
 <%= link_to "投稿新着順", admin_posts_path(latest: "true"),class: "btn btn-primary"%>
 </div>
</div>




<% @posts.each do |post| %>
<div class="row mt-4">

  <div class="col-2">
  </div>

  <div class="col-1">
  <%= link_to admin_user_path(post.user) do %>
     <%= image_tag post.user.get_profile_image(50,50)%>
  <% end %>
  </div>

  <div class='col-1'>
  <%= post.user.user_name %>
  </div>

  <div class='col-1'>
  <% post.tags.each do |tag| %>
    <%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %>
  <% end %>
  </div>

  <div class='col-2'>
  <%= link_to "投稿詳細", admin_post_path(post), class: "btn btn-secondary" %>
  </div>

</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-2'>
  <%= post.created_at.strftime('%Y/%m/%d') %>
  </div>

</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-7'>
   <%= post.caption %>
  </div>

</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-7'>
  <% if post.post_image.attached? %>
  <%= image_tag post.get_post_image(400,400) %>
  <% else %>
  <% end %>
  </div>

</div>
<% end %>

