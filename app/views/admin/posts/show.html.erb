<div class="container mt-5 ">
  <div class="row mt-4">
  <div class="col-2">
  </div>

<h3>
  <span class="text-under-line">
    投稿詳細
  </span>
</h3>
</div>
<div class="row mt-4">
  <div class="col-2">
  </div>

  <div class="col-1">
  <%= link_to(@post.user) do %>
    <%= image_tag @post.user.get_profile_image(50,50)%>
  <% end %>
  </div>

  <div class='col-1'>
  <%= @post.user.user_name %>
  </div>

  <div class='col-1'>
  <% @post.tags.each do |tag| %>
    <%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %>
  <% end %>
  </div>

  <div class='col-2'>
  <%= link_to "投稿削除", admin_post_path(@post), method: :delete, class: "btn btn-danger" %>
  </div>
</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-2'>
  <%= @post.created_at.strftime('%Y/%m/%d') %>
  </div>

</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-7'>
   <%= @post.caption %>
  </div>

</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-7'>
  <% if @post.post_image.attached? %>
  <%= image_tag @post.get_post_image(600,600) %>
  <% else %>
  <% end %>
  </div>

</div>

<div class="row mt-2">

  <div class="col-3">
  </div>

 <div class="col-3">
  ♥<%= @post.favorites.count %> いいね
 <span class="ml-1">コメント件数：<%= @post.post_comments.count %></span>
 </div>

</div>

 <div class="row mt-2">

  <div class="col-3">
  </div>

  <div class="col">
  <% @post.post_comments.each do |post_comment| %>
  <table>
    <tr>
    <td>
    <%= image_tag post_comment.user.get_profile_image(50,50) %>
    <%= post_comment.user.user_name %>
    </td>
    </tr>

    <tr>
    <td><%= post_comment.comment %></td>
    <td class="pl-3">
      <%= link_to "コメント削除", admin_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger " %>
    </td>
    </tr>

    <tr>
    <td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
</table>

  <% end %>
</div>
</div>

</div>
