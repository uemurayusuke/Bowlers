<% if @model == 'user' %>
	<h3>ユーザー検索結果 "<%= @content %>"</h3>
<div>
    <% @records.each do |user| %>
        <%= image_tag user.get_profile_image(50,50) %>
        <%= user.user_name %>
    <% end %>
</div>

<% elsif @model == 'post' %>
	<h3>投稿検索結果 "<%= @content %>"</h3>
  <div>
    <% @records.each do |post| %>
      <%= image_tag post.user.get_profile_image(50,50) %>
      <%= post.caption %>
    <% end %>
  </div>
<% end %>





<!--手本の記述-->
<% if @model == 'user' %>
	<h3>Users search for "<%= @content %>"</h3>
  <%= render 'users/index', users: @records %>
<% elsif @model == 'book' || @model == 'tag' %>
	<h3>Books search for "<%= @content %>"</h3>
  <%= render 'books/index', books: @records %>
<% end %>