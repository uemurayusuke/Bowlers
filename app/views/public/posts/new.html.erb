<div class="container mt-5">
  <div class="row main-row">
    <div class="col-12">

      <div class="form-row">
        <div class="form-group col-1"></div>
        <h4 class="form-group col-4">
          <span class="text-under-line">
            新規投稿画面
          </span>
        </h4>
      </div>

      <div class="form-row mt-3">
        <div class="form-group col-1"></div>
        <div class="form-group col">
          <%= render "layouts/errors", obj: @post %>
        </div>
      </div>

      <%= form_with model: @post, url: posts_path do |f| %>
        <div class="form-row mt-3">
          <div class="form-group col-1"></div>
          <span class="form-group col-2"><%= f.label :投稿内容 %></span>
          <div class="form-group col-6">
            <%= f.text_area :caption, class: "form-control", rows: 4 %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-1"></div>
          <span class="form-group col-2"><%= f.label :投稿画像 %></span>
          <div class="form-group col-6">
            <%= f.file_field :post_image, accept: "image/*" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-1"></div>
          <span class="form-group col-2"><%= f.label :タグ %></span>
          <div class="form-group col-3">
            <%= f.text_field :tag_name, class: "form-control" %>
          </div>
        </div>

        <div class="actions form-group justify-content:center; d-flex">
          <div class="form-group col-1"></div>
          <span class="form-group col-2"></span>
          <%= f.submit "投稿する", class: "btn btn-success col-3" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<!--整理完了-->