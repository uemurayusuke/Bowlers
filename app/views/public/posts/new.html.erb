<h1>新規投稿画面</h1>

<%= form_with model: @post, url:posts_path do |f| %>

<div>
<%= f.label :投稿内容 %>
<%= f.text_area :caption ,placeholder: "投稿内容"%>
</div>

<div>
  <%= f.label :投稿画像 %>
  <%= f.file_field :post_image, accept: "image/*" %>
</div>

<div>
<%= f.label :タグ %>
<%= f.text_field :tag_name %>
</div>

<div>
<%=f.submit "投稿する", class: "btn btn-success" %>
</div>

<% end %>