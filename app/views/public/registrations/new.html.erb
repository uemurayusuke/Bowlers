<div class="container mt-5">
<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table class="table mt-3">

<tr>
  <td>名前</td>
  <td><%= f.label :last_name, "(姓)" %></td>
  <td><%= f.text_field :last_name, autofocus: true%></td>
  <td><%= f.label :first_name, "(名)" %></td>
  <td><%= f.text_field :first_name %></td>
</tr>

<tr>
  <td>フリガナ</td>
  <td><%= f.label :last_name_kana, "(セイ)" %></td>
  <td><%= f.text_field :last_name_kana %></td>
  <td><%= f.label :first_name_kana, "(メイ)" %></td>
  <td><%= f.text_field :first_name_kana %></td>
</tr>

<tr>
 <td><%= f.label :user_name, "ユーザー名" %></td>
 <td></td>
 <td><%= f.text_field :user_name %></td>
</tr>

<tr>
  <td><%= f.label :email, "メールアドレス" %></td>
  <td></td>
  <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
</tr>

  <tr>
    <td><%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    </td>
    <td></td>
    <td>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
    <td></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td></td>
    <td></td>
    <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
  </tr>
 </table>
<% end %>

<%= render "public/shared/links" %>
</div>
