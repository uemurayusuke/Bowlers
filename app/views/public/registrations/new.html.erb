<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <p>名前</p>
          <p><%= f.label :last_name, "(姓)" %></p>
          <p><%= f.text_field :last_name, autofocus: true%></p>
          <p><%= f.label :first_name, "(名)" %></p>
          <p><%= f.text_field :first_name %></p>

<p>フリガナ</p>
          <p><%= f.label :last_name_kana, "(セイ)" %></p>
          <p><%= f.text_field :last_name_kana %></p>
          <p><%= f.label :first_name_kana, "(メイ)" %></p>
          <p><%= f.text_field :first_name_kana %></p>


          <p><%= f.label :user_name, "ユーザ名" %></p>
          <p><%= f.text_field :user_name %></p>

          <p><%= f.label :introduction, "自己紹介文" %></p>
          <p><%= f.text_field :introduction %></p>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
