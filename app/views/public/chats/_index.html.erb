<% chats.each do |chat| %>
  <% if chat.user_id == current_user.id %>
    <div class="chat-text-right">
      <div>
        <%= chat.user.user_name %>
      </div>
      <div class="pr-3">
        <div><%= chat.message %></div>
        <div class="text-right"><%= chat.created_at.strftime('%Y/%m/%d %H:%M') %></div>
      </div>
    </div>
  <% else %>
    <div class="chat-text-left">
      <div>
        <%= chat.user.user_name %>
      </div>
      <div class="pr-3">
        <div><%= chat.message %></div>
        <div class="text-right"><%= chat.created_at.strftime('%Y/%m/%d %H:%M') %></div>
      </div>
    </div>
  <% end %>
<% end %>

<!--整理完了-->