<div class="container mt-5">
<h3>ユーザー編集画面</h3>

<%= form_with model: @user, url:user_path do |f| %>

<table class="table mt-3">

<tr>
  <td><%= f.label :プロフィール画像 %></td>
  <td><%= f.file_field :profile_image, accept: "image/*" %></td>
</tr>


<tr>
  <td><%= f.label :ユーザー名 %></td>
  <td><%= f.text_field :user_name %></td>
</tr>

<tr>
  <td><%= f.label :自己紹介文 %></td>
  <td><%= f.text_area :introduction %></td>
</tr>

<tr>
  <td></td>
  <td><%=f.submit "変更内容を保存", class: "btn btn-success" %></td>
  <td><%= link_to "退会する", unsubscribe_users_path, class: "btn btn-danger"  %></td>
</tr>
</table>
<% end %>


