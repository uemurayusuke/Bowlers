<div class="container mt-5 ">
  <div class="row">
  <div class="col-2">
 </div>
  <h3>
    <span class="text-under-line">いいね投稿リスト</span>
  </h3>
  </div>

<% if @favorite_posts.present? %>



<div class="row mt-3">
 <div class="col-2">
 </div>
 <div class="col-7 btn-group">
   <%= link_to "投稿新着順", favorites_user_path(current_user, latest: true), class: "btn btn-outline-primary" %>
 <%= link_to "投稿古い順", favorites_user_path(current_user, old: true), class: "btn btn-outline-primary" %>
 <%= link_to "投稿リストに戻る", posts_path, class: "btn btn-outline-primary" %>
  <%= link_to "フォローユーザー投稿", following_posts_users_path(current_user),class: "btn btn-outline-primary"%>
 </div>
</div>


<% @favorite_posts.each do |post| %>
<div class="row mt-4">

  <div class="col-2">
  </div>

  <div class="col-1">
  <%= link_to(post.user) do %>
    <%= image_tag post.user.get_profile_image(50,50)%>
    <% end %>
  </div>

  <div class='col-1'>
  <%= post.user.user_name %>
  </div>

<div class='col-2'>
  <% post.tags.each do |tag| %>
  <%= link_to search_path(content: tag.name, model:"tag", method: "perfect"), class: "btn btn-outline-dark" do %>
   <%= tag.name %>
  <% end %>
  <% end %>
  </div>

  <div class='col-2'>
  <%= link_to "投稿詳細", post_path(post), class: "btn btn-secondary" %>
  </div>

</div>




<div class="row">

  <div class="col-3">
  </div>

  <div class='col-2'>
  <%= post.created_at.strftime('%Y/%m/%d') %>
  </div>

</div>


<div class="row">

  <div class="col-3">
  </div>

  <div class='col-7'>
   <%= post.caption %>
  </div>

</div>

<div class="row">

  <div class="col-3">
  </div>

  <div class='col-7'>
  <% if post.post_image.attached? %>
  <%= image_tag post.get_post_image(400,400) %>
  <% else %>
  <% end %>
  </div>

</div>

<div class="row">

  <div class="col-3">
  </div>

 <div class="col-3">
<div class=<%= "favorite-" + post.id.to_s %>>
    <%= render "public/shared/favorites_btn", post: post %>
 </div>
 </div>

 </div>



 <% end %>
 </div>

<% else %>
  <p>いいねした投稿はありません</p>
<% end %>


<div class="row mx-auto justify-content-center">
  <%= paginate  @favorite_posts %>
</div>