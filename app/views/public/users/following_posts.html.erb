<div class="container mt-5 ">

<div class="row">
 <div class="col-2">
 </div>
<h3>
  <span class="text-under-line">フォローユーザー投稿リスト</span>
</h3>
</div>

<% if @posts.present? %>

<div class="row mt-3">
 <div class="col-2">
 </div>
 <div class="col-6 btn-group">
 <%= link_to "投稿新着順", following_posts_users_path(current_user, latest: true), class: "btn btn-outline-primary" %>
 <%= link_to "投稿古い順", following_posts_users_path(current_user, old: true), class: "btn btn-outline-primary" %>
 <%= link_to "投稿リストに戻る", posts_path, class: "btn btn-outline-primary" %>
 <%= link_to "いいね投稿", favorites_user_path(current_user), class: "btn btn-outline-primary" %>
 </div>
</div>






<%= render "public/posts/posts_index", posts: @posts %>
















<% else %>


<div class="row mt-4">
  <div class="col-3">
  </div>
  <div class="col-6 text-center">

<h5>
 <span class="text-under-line-blue">
 フォローユーザーの投稿はありません
  </span>
</h5>
</div>

</div>


<% end %>
</div>

<%= render "public/shared/paginate", obj:  @posts %>