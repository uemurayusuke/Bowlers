<% if post.favorited_by?(current_user) %>
      <%= link_to post_favorite_path(post), method: :delete, remote: true do %>
        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
        <span style="color: red;"><%= post.favorites.count %></span>
      <% end %>
    <% else %>
      <%= link_to post_favorite_path(post), method: :post, remote: true do %>
      <i class="fa-regular fa-heart" aria-hidden="true" style="color: blue;"></i>
        <span style="color: blue;" ><%= post.favorites.count %></span>
      <% end %>
  <% end %>


 <span class="ml-1 post-comments-counter">
    <%= render "public/post_comments/counter", post: post %>
  </span>