<% if obj.errors.any? %>
  <div id="error_explanation">
    <h4 style="color: red;">
      <strong>
      <%= t "errors.template.header",model:t("models.#{obj.model_name}"),count:obj.errors.count %>
      </strong>
    </h4>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li>
          <span class="text-under-line-red">
          <%= message %>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>